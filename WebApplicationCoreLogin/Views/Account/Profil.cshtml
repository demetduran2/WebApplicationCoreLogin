@{
    ViewData["Title"] = "Profil";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="ProfilResimKaydet" enctype="multipart/form-data">@*enctype yazdık dosya post olabilsin diye*@ 
            <div class="text-center">
                <img src="~/resim/@ViewData["image"]" width="200" class="img-thumbnail rounded-circle" />
            </div>
            <div class="form-group">
                <label class="form-label">Profil Resmi</label>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="resim">
                    <button class="btn btn-outline-secondary" type="submit">KAYDET</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div asp-validation-summary="All"></div>

        <div class="row">
            <div class="col-md-4">
                <form method="post" action="AdSoyadKaydet">
                    <div class="form-group">
                        <label class="form-label">AD SOYAD</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Ad Soyad" name="adsoyad" value="@ViewData["adsoyad"]">
                            <button class="btn btn-outline-secondary" type="submit" id="button1">KAYDET</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            @*//bu usernamesave actionuna kaydedecek üstteki adsoyadkaydet actionuna*@
            <div class="col-md-4">
                <form method="post" action="UsernameSave">
                    <div class="form-group">
                        <label class="form-label">KULLANICI ADI</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="KULLANICI ADINIZ" name="username" value="@ViewData["username"]">
                            <button class="btn btn-outline-secondary" type="submit" id="button2">KAYDET</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            @*//bu usernamesave actionuna kaydedecek üstteki adsoyadkaydet actionuna*@
            <div class="col-md-4">
                <form method="post" action="PasswordSave">
                    <div class="form-group">
                        <label class="form-label">Şifre</label>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" placeholder="ŞİFRENİZ" name="password" value="@ViewData["password"]">
                            <button class="btn btn-outline-secondary" type="submit" id="button3">KAYDET</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    @if (ViewData["mesaj"] !=null)
    {
        <script>
            toastr["success"]("Değişti", "Profil güncellendi");
        </script>
    }
}

