@model WebApplicationCoreLogin.Models.ViewModel.UserViewModel
@{
    ViewData["Title"] = "Kayıt";
}
<div class="row">
    <div class="col-md-4 offset-4">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>


<div class="row">
    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <input asp-for="Role" class="form-control" placeholder="user or admin" />
                <span asp-validation-for="Role"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="username" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-user me-3">CREATE</i>
                </button>
            </div>
        </form>
    </div>
</div>
